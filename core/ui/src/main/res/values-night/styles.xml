<?xml version="1.0" encoding="utf-8"?>
 <resources>

     <!-- Base Sheet theme. -->
     <style name="BottomSheetDialogTheme" parent="Theme.Material3.DayNight.BottomSheetDialog">
         <item name="bottomSheetStyle">@style/BottomSheetTheme</item>

         <!-- Base color -->
         <item name="colorPrimary">@color/red</item>
         <item name="colorOnSurface">@color/white</item>
         <item name="colorOnBackground">@color/gray_light</item>
         <item name="colorControlNormal">@color/black</item>

         <!-- Window system -->
         <item name="android:navigationBarColor">@color/white</item>
         <item name="android:statusBarColor">@android:color/transparent</item>
         <item name="android:windowIsFloating">false</item>
     </style>

     <style name="BottomSheetTheme" parent="@style/Widget.Design.BottomSheet.Modal">
         <item name="android:background">@drawable/bg_sheet</item>
         <item name="android:backgroundTint">@color/white</item>
     </style>

 </resources>