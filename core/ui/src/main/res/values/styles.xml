<?xml version="1.0" encoding="utf-8"?>
 <resources>

     <!-- Base Sheet theme. -->
     <style name="BottomSheetDialogTheme" parent="Theme.Material3.DayNight.BottomSheetDialog">
         <item name="bottomSheetStyle">@style/BottomSheetTheme</item>

         <!-- Base color -->
         <item name="colorPrimary">@color/red</item>
         <item name="colorOnSurface">@color/white</item>
         <item name="colorOnBackground">@color/gray_light</item>
         <item name="colorControlNormal">@color/black</item>

         <!-- Window system -->
         <item name="android:navigationBarColor">@color/white</item>
         <item name="android:statusBarColor">@android:color/transparent</item>
         <item name="android:windowIsFloating">false</item>
     </style>

     <style name="BottomSheetTheme" parent="@style/Widget.Design.BottomSheet.Modal">
         <item name="android:background">@drawable/bg_sheet</item>
         <item name="android:backgroundTint">@color/white</item>
     </style>

    <!-- Base Dialog theme. -->
    <style name="DialogTheme" parent="Theme.Material3.DayNight.Dialog.Alert">
        <item name="android:background">@drawable/bg_dialog</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="buttonBarPositiveButtonStyle">@style/DialogTheme.TextButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/DialogTheme.TextButton</item>
    </style>

    <style name="DialogTheme.TextButton" parent="Widget.Material3.Button.TextButton">
        <item name="backgroundTint">@color/transparent</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

 </resources>